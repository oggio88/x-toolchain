pkgname="${_target}-xz"
pkgver=5.2.4
pkgrel=1
pkgdesc="Library and command line tools for XZ and LZMA compressed files (mingw-w64)"
arch=('any')
url="http://tukaani.org/xz"
license=("custom" "GPL" "LGPL")
makedepends=("${_target}-configure")
depends=("${_target}-gcc")
options=(staticlibs !strip !buildflags)
source=("$url/xz-${pkgver}.tar.gz")
sha256sums=('b512f3b726d3b37b6dc4c8570e137b9311e7552e8ccbab4d39d47ce5f4177145')


build() {
    cd "${srcdir}/xz-${pkgver}"
    mkdir -p build-${_target} && pushd build-${_target}
    ${_prefix}/bin/${_target}-configure
    make
    popd
}

package() {
    cd "${srcdir}/xz-${pkgver}/build-${_target}"
    make DESTDIR="$pkgdir" install
    find "$pkgdir/${_prefix}/${_target}" -name '*.a' -name '*.so*' -type f -exec ${_target}-strip -g {} \;
}

