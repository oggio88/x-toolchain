# $Id$
# Maintainer: Jan de Groot <jgc@archlinux.org>
# Maintainer: Andreas Radke <andyrtr@archlinux.org>
# Contributor: Alexander Baldeck <alexander@archlinux.org>
pkgname="${_target}-pixman"
_basename="${pkgname#${_target}-}"
pkgver=0.40.0
pkgrel=1
pkgdesc="The pixel-manipulation library for X and cairo"
arch=(x86_64)
url="http://xorg.freedesktop.org"
license=('custom')
depends=("${_target}-gcc")
makedepends=("${_target}-configure")
source=(https://xorg.freedesktop.org/releases/individual/lib/${_basename}-${pkgver}.tar.xz)
sha512sums=('8a60edb113d68791b41bd90b761ff7b3934260cb3dada3234c9351416f61394e4157353bc4d61b8f6c2c619de470f6feefffb4935bfcf79d291ece6285de7270')
options=('staticlibs' '!buildflags')

prepare() {
  cd $_basename-$pkgver
  # patch -p1 -i ${srcdir}/0002-pixman-private-include-float.h-only-in-C-code.patch
}

build() {
  cd $_basename-$pkgver
  mkdir build-${_target} && pushd build-${_target}
  ${_target}-configure
  make
  popd
}

build() {
  ${_target}-meson $_basename-$pkgver build \
    -D loongson-mmi=disabled \
    -D vmx=disabled \
    -D arm-simd=disabled \
    -D neon=disabled \
    -D iwmmxt=disabled \
    -D mips-dspr2=disabled \
    -D gtk=disabled
  ninja -C build
}

package() {
  DESTDIR="${pkgdir}" meson install -C build
  find "$pkgdir/${_prefix}/${_target}" -name '*.a' -name '*.so' -type f -exec ${_target}-strip -g {} \;
}

strip() {
    ${_target}-strip $@
}
export -f strip