# Maintainer: Mike Brown 
# Maintainer: Kevin Mihelich 

_reponame="crosstool-ng"
pkgname="xng"
pkgver=23.139c09d
pkgrel=1
pkgdesc="Crosstool-NG is a versatile (cross) toolchain generator"
arch=('any')
makedepends=('git' 'help2man')
license=('custom')
url="http://crosstool-ng.github.io/"
source=("git+https://github.com/crosstool-ng/crosstool-ng")
md5sums=('SKIP')
pkgver() {
  cd "${_pkgname}"
  echo $(git rev-list --count master).$(git rev-parse --short master)
}

prepare() {
  cd "${_reponame}"
  ./bootstrap
}

build() {
  cd "${_reponame}"
  ./configure --prefix=/opt/xng
  make
}

package(){
  cd "${srcdir}/${_reponame}"
  make DESTDIR="${pkgdir}" install
}
